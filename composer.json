{
    "name": "soap/laravel-invoices",
    "type": "library",
    "description": "Easy invoices generation using Laravel Eloquent",
    "keywords": [
        "Eloquent",
        "invoicable",
        "invoices",
        "Laravel",
        "laravel-invoices",
        "payments"
    ],
    "homepage": "https://github.com/soap/laravel-invoices",
    "license": "MIT",
    "authors": [
        {
            "name": "Prasit Gebsaap <soap>",
            "email": "prasit.gebsaapk@gmail.com",
            "homepage": "https://github.com/soap"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-intl": "*",
        "dompdf/dompdf": "^0.8.0",
        "illuminate/support": "^5.8|^6.0|^7.0",
        "nesbot/carbon": "^1.22|^2.0"
    },
    "require-dev": {
        "graham-campbell/testbench": "^5.2",
        "phpunit/phpunit": "^7.5|^8.3",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "soap\\Invoices\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "soap\\Invoices\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Soap\\Invoices\\Providers\\InvoicesServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
